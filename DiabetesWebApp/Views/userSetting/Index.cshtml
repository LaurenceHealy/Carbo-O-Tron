@model IEnumerable<userSetting>

@{
    ViewData["Title"] = "User Setting";
}
<div class="container p-3">
    <div class="row pt-4">
        <div>
            <h2 class="text-info">User Settings</h2>
        </div>
        
    </div>
    <br/>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Target BG Level 
                </th>
                <th>
                    Low BG Alert
                </th>
                <th>
                    Correction Factor
                </th>
                <th>
                    Carb Ratio
                </th>
                <th>
                    Insulin Action Time
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">                    
                        @obj.targetBgl
                    </td>
                    <td width="10%">                    
                        @obj.lowBglAlert
                        </td>
                    <td width="10%">
                        @obj.insulinCorrectionFactor
                    </td>
                    <td width="10%">
                        @obj.carbRatio
                    </td>
                    <td width="30%">
                        @obj.insulinActionTime
                    </td>
                    <td>
                        <button class="btn btn-info p-1">
                            <a asp-controller="userSetting" asp-action="Edit" asp-route-id="@obj.settingId"><i class="bi bi-pencil"></i>Change User Settings</a>
                        </button>
                    </td>
                                        
                </tr>
            }
        </tbody>
    
    </table>
</div>

