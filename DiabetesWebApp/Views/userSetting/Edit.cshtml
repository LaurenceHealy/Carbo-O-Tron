@model userSetting

<form method="post" asp-action="Edit">
    <input asp-for="settingId" hidden />
    <div class="border-dark p-3 mt-4 bg-primary">
        <div class="row pb-2">
            <h2 class="text-info">Change User Setting</h2>
        </div>    
        <table>
            <tr>
                <td class="p-2">
                    <label asp-for="targetBgl"></label>
                    <input asp-for="targetBgl" class="form-control" />
                    <span asp-validation-for="targetBgl" class="text-danger"></span>
                </td>
                <td class="p-2">
                    <label asp-for="lowBglAlert"></label>
                    <input asp-for="lowBglAlert" class="form-control" />
                    <span asp-validation-for="lowBglAlert" class="text-danger"></span>
                </td>
                <td class="p-2">
                    <label asp-for="carbRatio"></label>
                    <input asp-for="carbRatio" class="form-control" />
                    <span asp-validation-for="carbRatio" class="text-danger"></span>
                </td>
                <td class="p-2">
                    <label asp-for="insulinCorrectionFactor"></label>
                    <input asp-for="insulinCorrectionFactor" class="form-control" />
                    <span asp-validation-for="insulinCorrectionFactor" class="text-danger"></span>
                </td>
                <td class="p-2">
                    <label asp-for="insulinActionTime"></label>
                    <input asp-for="insulinActionTime" class="form-control" />
                    <span asp-validation-for="insulinActionTime" class="text-danger"></span>
                </td>
            </tr>            
        </table>
        <button type="submit" class="btn btn-info mt-3" >
            <i class="bi bi-save"></i> &nbsp; Update User Settings
        </button>
        <a asp-controller="userSetting" asp-action="Index" class="btn btn-secondary mt-3">
            <i class="bi bi-arrow-return-left"></i> &nbsp; Back to List
        </a>
    </div>    
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
