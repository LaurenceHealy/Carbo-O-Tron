@model IEnumerable<logEntry>

@{
    ViewData["Title"] = "Log Book";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-info">Log Book</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="logEntry" asp-action="Create" class="btn btn-info">
                <i class="bi bi-pencil-square"></i> &nbsp; Enter New Log Entry
            </a>
        </div>
    </div>
    <br/>
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th>
                    Date and Time
                </th>
                <th>
                    Blood Sugar
                </th>
                <th>
                    Carbohydrates
                </th>
                <th>
                    Insulin
                </th>
                <th>
                    Notes
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">                    
                        @obj.dateTime
                    </td>
                    <td width="10%">                    
                        @obj.entryBg
                        </td>
                    <td width="10%">
                        @obj.entryCarb
                    </td>
                    <td width="10%">
                        @obj.entryInsulin
                    </td>
                    <td width="30%">
                        @obj.entryNote
                    </td>
                    <td>
                        <button class="btn btn-info p-1">
                            <a asp-controller="logEntry" asp-action="Edit" asp-route-id="@obj.entryId"><i class="bi bi-pencil"></i>Edit</a>
                        </button> 
                    </td>
                    <td>
                        <button class="btn btn-warning p-1"  >
                            <a asp-controller="logEntry" asp-action="Delete" asp-route-id="@obj.entryId"><i class="bi bi-trash"></i>Delete</a>
                        </button> 
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
</div>

